    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build BASIC Debug",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${workspaceFolder}\\mainBASIC.cpp",
                "-o",
                "${workspaceFolder}\\bin-debug\\DaniHash_BASIC 1.0.3d.exe",
                "-IC:\\SFML-2.5.1\\include",
                "-LC:\\SFML-2.5.1\\lib",
                "-lsfml-graphics-d",
                "-lsfml-window-d",
                "-lsfml-system-d",
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "problemMatcher": [
                {
                    "base":"$gcc",
                    "fileLocation": ["autoDetect", "${workspaceFolder}"]
                }
            ],
            "group": "build"
        },
